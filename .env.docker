# Configuration Docker pour CV Filtering System
# Copiez ce fichier vers .env pour personnaliser votre configuration

# Application
APP_NAME="CV Filtering System"
APP_ENV=production
APP_KEY=base64:your-app-key-here
APP_DEBUG=false
APP_URL=http://localhost

# Base de données PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=database
DB_PORT=5432
DB_DATABASE=cv_filtering_db
DB_USERNAME=cv_user
DB_PASSWORD=cv_password

# Configuration Redis (optionnel)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuration Mail (pour les notifications)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@cv-filtering.local"
MAIL_FROM_NAME="${APP_NAME}"

# Configuration OpenAI (pour l'IA)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Configuration de session
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Configuration de cache
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis

# Configuration de stockage
FILESYSTEM_DISK=local

# Ports pour Docker Compose
NGINX_PORT=80
FRONTEND_PORT=3000
BACKEND_PORT=8000
DATABASE_PORT=5432
REDIS_PORT=6379
MAILHOG_PORT=8025

# Configuration Nginx
NGINX_CLIENT_MAX_BODY_SIZE=10M

# Configuration de sécurité
CORS_ALLOWED_ORIGINS="http://localhost,http://localhost:3000,http://localhost:80"
